{
  "extends": "@fidesui/config/tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "ESNext",
    "target": "ESNext",

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "node_modules/microbundle/index.d.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
