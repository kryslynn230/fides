{
  "extends": "@fidesui/config/tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
