{
  "extends": "@fidesui/config/tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxFactory": "",
    // https://github.com/developit/microbundle/issues/857#issuecomment-884939726
    "jsxFragmentFactory": "",
    "jsxImportSource": "preact",

    "module": "ESNext",
    "target": "ESNext",

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "node_modules/microbundle/index.d.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
